#!/usr/bin/expect -f

set prompt "#"
set address "11:22:34:3B:E7:3C"

spawn sudo bluetoothctl
expect -re $prompt
send "remove $address\r"
sleep 1
expect -re $prompt
send "scan on\r"
send_user "\nSleeping\r"
sleep 9
send_user "\nDone sleeping\r"
send "scan off\r"
expect "Controller"
send "trust $address\r"
sleep 2
send "pair $address\r"
send "connect $address\r"
sleep 1
send_user "\nShould be paired now.\r"
send "quit\r"
expect eof
